{
    "tasks.json.defaultBuildTask": "Build iOS Simulator",
    "statusbar.commands": [
        {
            "text": "$(play) Run iOS App",
            "command": "workbench.action.tasks.runTask",
            "arguments": "Run on Simulator",
            "tooltip": "Build and run the iOS app on simulator"
        },
        {
            "text": "$(tools) Build iOS",
            "command": "workbench.action.tasks.runTask",
            "arguments": "Build iOS Simulator",
            "tooltip": "Build iOS app for simulator"
        }
    ],
    "files.associations": {
        "*.swift": "swift"
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "swift.autoGenerateProject": false,
    "swift.actionAfterBuildError": "Focus Terminal",

    "github.copilot.chat.codeGeneration.useInstructionFiles": true,
    "github.copilot.chat.mcp.enabled": false,
    "github.copilot.chat.mcp.excludedServers": [
        "gitkraken2",
        "gitkraken3",
        "gitkraken4"
    ],
    "cSpell.words": [
        "letterboxing",
        "pillarboxing",
        "hypot",
        "deselections",
        "textformat",
        "uturn",
        "PENCILKIT",
        "COMPANYCAM",
        "DRAWSANA",
        "xcodeproj"
    ]
}
